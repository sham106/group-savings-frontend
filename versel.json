{
    "version": 2,
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "https://group-savings-backend.onrender.com/api/$1",
        "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
      },
      {
        "src": "/(.*)",
        "dest": "/index.html",
        "headers": {
          "Cache-Control": "no-cache"
        }
      }
    ],
    "rewrites": [
      { "source": "/(.*)", "destination": "/index.html" }
    ]
  }