{
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "https://group-savings-backend.onrender.com/api/$1"
      },
      {
        "source": "/(.*)", 
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/(.*\\.(js|css|json|ico|png|jpg|svg))",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "/assets/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  }